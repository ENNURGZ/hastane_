@model List<hastane_.Entities.Randevu>

<h2>Randevu Listesi</h2>

@if (Model.Count > 0)
{
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <table class="table">
        <thead>
            <tr>
                <th>Doktor</th>
                <th>Randevu Günü</th>
                <th>Randevu Saati</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var randevu in Model)
            {
                <tr>
                    <td>@randevu.Doctor.Name @randevu.Doctor.Surname</td>
                    <td>@randevu.RandevuGunu.ToShortDateString()</td>
                    <td>@randevu.RandevuSaati</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Randevu listeniz bulunmamaktadır.</p>
}