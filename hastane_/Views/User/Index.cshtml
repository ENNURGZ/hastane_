@model List<UserModel>
@{
    ViewData["Title"] = "Kullanıcılar";
}

<div class="row mb-3">
    <div class="col">
        <br />
        <br />
        <br />
        <br />
        <br />
    </div>
</div>
<div class="row mb-3">
    <div class="col">
        <table class="table table-hover table-sm">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Surname</th>
                    <th>Username</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (UserModel user in Model)
                {
                    <tr>
                        <td>@user.Name</td>
                        <td>@user.Surname</td>
                        <td>@user.Username</td>
                        <td class="text-end">
                            <a asp-action="Delete" asp-controller="Account" asp-route-id="@user.Id"
                            onclick="return confirm('Bu Kullanıcıyı Silmek İstediğinize Emin Misiniz : @user.Username ?')"
                            class="btn btn-danger btn-sm"><i class="fa fa-trash me-2"></i>Sil</a>
                            
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>